<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script type="text/javascript" src="/static/js/jquery-3.5.1.min.js"></script>
    <%- include('../../layout/head.ejs') %>
    <title><%= title %></title>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <%- include('../../layout/nav.ejs') %>
            <div class="col-md-9">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-2">
                                <h4>Edit Post</h4>
                            </div>
                            <div class="col-md-2">
                            </div>
                            <div class="col-md-2">
                            </div>
                            <div class="col-md-2">
                            </div>
                            <div class="col-md-2">
                            </div>
                            <div class="col-md-2">
                              <img class="img-fluid"  src="/static/images/img-05.png" alt="Logo image" />
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-md-8">
                                <form>
                                  <input type="hidden" name="id" value="<%= data.post.id %>" class="id">
                                  
                                  <!------------------------------ Tittle ------------------------------>
                                  <div class="form-group row">
                                    <label for="text" class="col-12 col-form-label">Title </label> 
                                    <div class="col-12">
                                      <input id="text" value="<%= data.post.title %>" name="title" placeholder="Enter Title here" class="form-control here title" required="required" type="text">
                                    </div>
                                  </div>
                                  <!------------------------------ Author ------------------------------>
                                  <div class="form-group row">
                                    <label for="text" class="col-12 col-form-label">Author </label> 
                                    <div class="col-12">
                                      <input id="text" value="<%= data.post.author %>" name="author" placeholder="Enter Author here" class="form-control here author" required="required" type="text">
                                    </div>
                                  </div>
                                  <!------------------------------ Content ------------------------------>
                                  <div class="form-group row">
                                    <label for="textarea" class="col-12 col-form-label">Content</label> 
                                    <div class="col-12">
                                      <textarea id="content" name="content" cols="40" rows="5" class="form-control"><%= data.post.content %></textarea>
                                    </div>
                                  </div> 
                                  <!------------------------------ Error ------------------------------>
                                  <div class="form-group row">
                                    <% if(!data.error) {%>
                                      <p></p>
                                    <%} else {%>
                                      <p style="color:#f75050;">
                                        <% data.status %>
                                      </p>
                                    <%}%> 
                                  </div>
                                  <input type="button" class="post_edit btn btn-success" value="Save" name="post_edit">
                                </form>
                            </div>
                            <%- include('../../layout/category.ejs') %>        
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="/static/js/post.js"></script>
</body>
</html>