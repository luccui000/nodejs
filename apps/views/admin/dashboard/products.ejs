<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../layout/head.ejs') %>
    <title><%= title %></title>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <%- include("../layout/nav.ejs") %>
      <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4"><div style="position: absolute; inset: 0px; overflow: hidden; pointer-events: none; visibility: hidden; z-index: -1;" class="chartjs-size-monitor">
        <%- include('../layout/nav-dashboard.ejs') %>
        <canvas class="my-4 w-100 chartjs-render-monitor" id="myChart" width="974" height="410" style="display: block; height: 342px; width: 812px;"></canvas>
        <div>
          <h2 >All Products</h2>
          <a href="/admin/products/new" class="btn btn-info pull-right" style="padding-bottom: 10px;"> Add New Product</a>
        </div>
        <div class="table-responsive">
          <table class="table table-striped table-sm">
            <thead>
              <tr>
                <th>#</th>
                <th>Name</th>
                <th>Prices</th>
                <th>Description</th>
                <th>Categorie</th>
                <th>Author</th>
                <th>Created</th>
                <th>Updated</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
                <tr>
                    <% for(let i = 0; i < data.product.length; i++) {%>
                        <th><%= data.product[i].id %></th>
                        <th><%= data.product[i].name %></th>
                        <th id="price"><%= data.product[i].prices %></th>
                        <th><%= data.product[i].description %></th>
                        <th><%= data.product[i].category %></th>
                        <th><%= data.product[i].author %></th>
                        <th><%= data.product[i].created_at %></th>
                        <th><%= data.product[i].updated_at %></th>
                        <th>
                            <a href="/admin/products/edit/<%= data.product[i].id %>" class="btn btn-success">Edit</a>
                            <button class="btn btn-danger product_delete" product_id="<%= data.product[i].id %>">Delete</button>
                        </th>
                    </tr>
                  <%}%>
            </tbody>
          </table>
        </div>
      </main>
    </div>
  </div>
  <script src="/static/js/product.js"></script>
</body>
</html>
